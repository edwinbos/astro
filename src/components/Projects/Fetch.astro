---
import { Image } from 'astro:assets';
import FetchImage from '../../images/fetch.svg';
---

<a 
    href="/projects/fetch"
    title="Fetch"
    class="w-full h-96 bg-[#4169E1] rounded-3xl grid grid-cols-1 grid-rows-1"
    style="view-transition-name: hero"
>
    <div class="col-start-1 row-start-1 grid place-content-center">
        <Image src={FetchImage} 
            alt="Fetch"
        />
    </div>
    <div class="col-start-1 row-start-1 grid justify-items-start items-end p-8">
        <div class="text-white font-semibold text-2xl">Running speed</div>
    </div>
</a>