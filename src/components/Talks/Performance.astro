---
import { Image } from 'astro:assets';
import LateImage from '../../images/late.svg';
import ArrowRightIcon from '../../components/Icons/ArrowRight.astro';

const { layout } = Astro.props;
---
<a 
    href="/talks/performance"
    title="Performance"
    class="w-full h-96 bg-gradient-to-br from-white to-[#f49d0c] rounded-3xl flex items-end relative"
    style="view-transition-name: performance"
>
    <div class="p-8 relative z-10">
        <div class="text-slate-900" style="view-transition-name: performance-text">
            { layout === 'header' && 
                <h1 class="font-semibold text-4xl mb-4">Performance</h1>
                <p class="mb-4 text-2xl font-extralight">Everything about loading third party scripts</p>
            }
            
            {layout === "tile" &&
                <h3 class="font-semibold text-3xl mb-4">Performance</h3>
                <p class="mb-4 text-xl font-extralight">Everything about loading third party scripts</p>
                <button type="button" class="primary-link">
                    See the slides <ArrowRightIcon className="w-5 h-5"/>
                </button>
            }
        </div>
    </div>
    <Image src={LateImage} 
           alt="Performance"
           class="opacity-30 absolute -right-16 -bottom-8 h-96 pointer-events-none select-none"
           loading="lazy"
           style="view-transition-name: performance-image"
    />
</a>