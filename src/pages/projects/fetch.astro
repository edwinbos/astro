---
import Layout from '../../layouts/Layout.astro';
import '../../styles/theme.css'

import { Image } from 'astro:assets';
import FetchImage from '../../images/fetch.svg';
---

<Layout title="Fetch - Projects - Edwin Bos">
    <div class="container mx-auto">
        <div 
            class="h-[300px] bg-[#4169E1] rounded-3xl grid grid-cols-1 grid-rows-1 mt-16"
            style="view-transition-name: hero"
        >
            <div class="col-start-1 row-start-1 grid place-content-center">
                <Image 
                    src={FetchImage} 
                    alt="Fetch"
                    loading="eager"
                />
            </div>
            <div class="col-start-1 row-start-1 grid justify-items-start items-end p-8">
                <div class="text-white font-semibold text-2xl">Running speed</div>
            </div>
        </div>
    </div>
</Layout>
